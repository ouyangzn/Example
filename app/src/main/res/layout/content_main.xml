<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ouyang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">
    <!-- ouyang:layout_behavior="@string/appbar_scrolling_view_behavior" -->

    <TextView
        android:id="@+id/tv_hello"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <com.ouyang.example.view.HorizontalProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_hello"
        android:paddingLeft="20dp"
        ouyang:currProgress="50"
        ouyang:progressColor="#ff0000"
        ouyang:primaryColor="@color/colorPrimary"
        />

</RelativeLayout>
